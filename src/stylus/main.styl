*
	margin 0
	padding 0

// Fonts
@font-face
	font-family "Lato-Black"
	src url("../fonts/Lato-Black.ttf")

@font-face
	font-family "Lato-Regular"
	src url("../fonts/Lato-Regular.ttf")
	
@font-face
	font-family "Lato-Light"
	src url("../fonts/Lato-Light.ttf")

body
	background-image url("../img/background2.jpg")
	background-repeat no-repeat
	font-family "Lato-Regular"
	
// Header

.mainHeader
	width 100%
	height 44px
	display flex
	justify-content center
	background-color #FFF
	padding 2px 0
	
.mainHeader .logotipo
	width 150px
	-webkit-transition -webkit-transform .5s
	transition transform .5s
	
.mainHeader .logotipo:hover
	-webkit-transform scale(.9, .9)
	transform scale(.9, .9)
	
// Home

.home
	width 100%
	height 700px
	color #FFF

.home .wrap
	width 70%
	height inherit
	margin 0 auto
	display flex
	align-items flex-end

.home article
	width 368px
	//border 1px solid red
	
.home article .title
	font-size 32px
	font-family "Lato-Black"
	
.home article .btn
	width 180px
	height 35px
	border none
	border-radius 3px
	background-color #50a2de
	color #EEE
	margin-top 10px
	font-size 14px
	cursor pointer
	font-family "Lato-Regular"
	transition background-color .5s
	
.home article .btn:hover
	//color #FFF
	background-color #35678a

.home article .btn:last-child
	margin-left 8px

.home .baixo
	width 100%
	text-align center
	font-size 10px
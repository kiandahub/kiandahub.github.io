.form_fazerparte
	.formLightBox
		.fechar x
		header
			p.title Junte-se a nós
			p.desc Insira os seus dados e faça parte do KiandaHUB, a casa das startups e do empreendedorismo digital. 
		.formBody
			form(method="POST" class="mainForm")
				p.desc Os campos com * são obrigatórios.
				.formBasico
					input(type="text" placeholder="NOME *" class="inputField i_nome required" name="entry.250421101")
					.subForm
						input(type="email" placeholder="E-MAIL *" class="inputField i_email required" name="entry.1929566306")
						input(type="text" placeholder="TELEFONE" class="inputField i_telefone" name="entry.1188954101")
					.subForm
						input(type="text" placeholder="PAÍS *" class="inputField i_pais required" name="entry.236325354")
						input(type="text" placeholder="MORADA" class="inputField i_morada" name="entry.1769854544")
					//.subForm
					input(type="date" placeholder="DATA DE NASCIMENTO " class="inputField i_data_de_nascimento" name="entry.1159572353")
					select(name="entry.1170105695" class="nivel_academico inputField i_nivel_academico")
						option(value="") NÍVEL ACADÉMICO
						option(value="Ensino médio") Ensino médio
						option(value="Licenciatura") Licenciatura
						option(value="Pós graduado") Pós graduado
						option(value="Doutoramento") Doutoramento
					p.desc Interessado em?
					.subForm					
						select(name="entry.292287562" class="interessado inputField i_interessado_em")
							option(value="") -
							option(value="Startup") Startups
							option(value="Investir em startups") Investir em startups
							option(value="Ser um mentor") Ser um mentor
				.startup
					input(type="text" placeholder="NOME DA STARTUP*" class="i_nome_da_startup req_startup" name="entry.93544234")
					.subForm
						input(type="text" placeholder="URL" class="i_url" name="entry.2068591985")
						input(type="email" placeholder="EMAIL*" class="i_email_da_startup req_startup" name="entry.1515064231")
					textarea(placeholder="SOBRE A STARTUP*" class="i_sobre_a_startup req_startup" name="entry.745620118")
				.investidor
					.subForm
						input(type="text" placeholder="EMPRESA*" class="i_empresa req_investidor" name="entry.745620118")
						input(type="text" placeholder="CARGO*" class="i_cargo req_investidor" name="entry.2068591985")
					p.desc Já investiu antes?
					input(type="radio" name="entry.1515064231" value="Sim" class="i_ja_investiu req_investidor")
					span.desc Sim 
					input(type="radio" name="entry.1515064231" value="Não" class="i_ja_investiu req_investidor")
					span.desc Não
					textarea(placeholder="PROJECTOS INVESTIDOS" class="i_projectos_investidos" name="entry.745620118")
				.mentor
					.subForm
						input(type="text" placeholder="EMPRESA*" class="i_empresa_mentor req_mentor" name="entry.93544234")
						input(type="text" placeholder="CARGO*" class="i_cargo_mentor req_mentor" name="entry.2068591985")
					p.desc Já foi mentor antes?
					input(type="radio" name="entry.1515064231" value="Sim" class="i_ja_foi_mentor req_mentor")
					span.desc Sim 
					input(type="radio" name="entry.1515064231" value="Não" class="i_ja_foi_mentor req_mentor")
					span.desc Não
					textarea(placeholder="FALE SOBRE ESSA EXPERIÊNCIA*" class="i_fale_sobre req_mentor" name="entry.2068591985")
		footer
			.wrap
				input(type="button" value="Próximo" class="btn proximo" disabled)
				input(type="button" value="Registar" class="btn registar" disabled)
